@Article{Zhu13a,
  author    = {Guangtun Zhu and Brice M{\'{e}}nard},
  title     = {{THE} {JHU}-{SDSS} {METAL} {ABSORPTION} {LINE} {CATALOG}: {REDSHIFT} {EVOLUTION} {AND} {PROPERTIES} {OF} Mg {II} {ABSORBERS}},
