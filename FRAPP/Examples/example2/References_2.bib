@Article{Werk14,
  author    = {Jessica K. Werk and J. Xavier Prochaska and Jason Tumlinson and Molly S. Peeples and Todd M. Tripp and Andrew J. Fox and Nicolas Lehner and Christopher Thom and John M. O{\textquotesingle}Meara and Amanda Brady Ford and Rongmon Bordoloi and Neal Katz and Nicolas Tejos and Benjamin D. Oppenheimer and Romeel Dav{\'{e}} and David H. Weinberg},
  title     = {{THE} {COS}-{HALOS} {SURVEY}: {PHYSICAL} {CONDITIONS} {AND} {BARYONIC} {MASS} {IN} {THE} {LOW}-{REDSHIFT} {CIRCUMGALACTIC} {MEDIUM}},
  doi       = {10.1088/0004-637x/792/1/8},
  number    = {1},
  pages     = {8},
  url       = {https://doi.org/10.1088/0004-637x/792/1/8},
  volume    = {792},
  abstract  = {We analyze the physical conditions of the cool, photoionized (T ∼104 K) circumgalactic medium (CGM) using the COS-Halos suite of gas column density measurements for 44 gaseous halos within 160 kpc of L ∼ L* galaxies at z ∼ 0.2. These data are well described by simple photoionization models, with the gas highly ionized (nH ii/nH ≳ 99%) by the extragalactic ultraviolet background. Scaling by estimates for the virial radius, Rvir, we show that the ionization state (tracked by the dimensionless ionization parameter, U) increases with distance from the host galaxy. The ionization parameters imply a decreasing volume density profile nH = (10−4.2 ± 0.25)(R/Rvir)−0.8 ± 0.3. Our derived gas volume densities are several orders of magnitude lower than predictions from standard two-phase models with a cool medium in pressure equilibrium with a hot, coronal medium expected in virialized halos at this mass scale. Applying the ionization corrections to the H i column densities, we estimate a lower limit to the cool gas mass  M☉ for the volume within R < Rvir. Allowing for an additional warm-hot, O vi-traced phase, the CGM accounts for at least half of the baryons purported to be missing from dark matter halos at the 1012 M☉ scale.},
  journal   = {The Astrophysical Journal},
  month     = {aug},
  publisher = {American Astronomical Society},
  year      = {2014},
}

@Article{Werk13,
  author    = {Jessica K. Werk and J. Xavier Prochaska and Christopher Thom and Jason Tumlinson and Todd M. Tripp and John M. O{\textquotesingle}Meara and Molly S. Peeples},
  title     = {{THE} {COS}-{HALOS} {SURVEY}: {AN} {EMPIRICAL} {DESCRIPTION} {OF} {METAL}-{LINE} {ABSORPTION} {IN} {THE} {LOW}-{REDSHIFT} {CIRCUMGALACTIC} {MEDIUM}},
  doi       = {10.1088/0067-0049/204/2/17},
  number    = {2},
  pages     = {17},
  url       = {https://doi.org/10.1088/0067-0049/204/2/17},
  volume    = {204},
  abstract  = {We present the equivalent width and column density measurements for low and intermediate ionization states of the circumgalactic medium (CGM) surrounding 44 low-z, L ≈ L* galaxies drawn from the COS-Halos survey. These measurements are derived from far-UV transitions observed in HST/COS and Keck/HIRES spectra of background quasars within an impact parameter R < 160 kpc to the targeted galaxies. The data show significant metal-line absorption for 33 of the 44 galaxies, including quiescent systems, revealing the common occurrence of a cool (T ≈ 104-105 K), metal-enriched CGM. The detection rates and column densities derived for these metal lines decrease with increasing impact parameter, a trend we interpret as a declining metal surface density profile for the CGM. A comparison of the relative column densities of adjacent ionization states indicates that the gas is predominantly ionized. The large surface density in metals demands a large reservoir of metals and gas in the cool CGM (very conservatively, M
            cool
